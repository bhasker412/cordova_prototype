<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="lu.chris.cordova_prototype" version="0.0.1">
    <name>cordova_prototype</name>
    <description>
        beautify me photo app (cordova prototype)
    </description>
    <author email="chris963@gmail.com" href="https://chris.lu">
        ChrisWeb
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <preference name="orientation" value="portrait"/>
    <platform name="android">
        <icon density="ldpi" src="resources/android/ldpi.png"/>
        <icon density="mdpi" src="resources/android/mdpi.png"/>
        <icon density="hdpi" src="resources/android/hdpi.png"/>
        <icon density="xhdpi" src="resources/android/xhdpi.png"/>
        <splash src="resources/android/res-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="resources/android/res-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="resources/android/res-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="resources/android/res-port-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>
    <preference name="AndroidExtraFilesystems" value="documents" />
</widget>
